---
import BaseLayout from './BaseLayout.astro';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/scroll-animations.css';

interface Props {
  title: string;
  description?: string;
  canonical: string;
  robots?: string;
  publishDate?: string;
  category?: string;
  readingTime?: number;
  children?: any;
}

const { title, description, canonical, robots, publishDate, category, readingTime, children } = Astro.props;
---

<BaseLayout title={title} description={description} canonical={canonical} robots={robots}>
  <slot />
</BaseLayout>

