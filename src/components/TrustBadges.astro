<style>
  .trust-badges-section {
    background: linear-gradient(to bottom, #ffffff 0%, #fafafa 100%);
    position: relative;
    border-top: none; /* Rimuove eventuali bordi che causano la linea nera */
    margin-top: -1px; /* Sovrappone leggermente per eliminare gap */
  }

  .trust-pattern {
    background-image: 
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 10px,
        rgba(184, 134, 11, 0.03) 10px,
        rgba(184, 134, 11, 0.03) 20px
      );
  }

  .trust-badge {
    background: white;
    border: 1px solid rgba(11, 11, 11, 0.08);
    border-radius: 20px;
    padding: 2rem 1.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .trust-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-accent), rgba(184, 134, 11, 0.4));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .trust-badge:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12), 0 8px 16px rgba(0, 0, 0, 0.08);
    border-color: rgba(184, 134, 11, 0.3);
  }

  .trust-badge:hover::before {
    transform: scaleX(1);
  }

  .trust-badge.featured {
    border-color: rgba(184, 134, 11, 0.2);
    background: linear-gradient(135deg, rgba(184, 134, 11, 0.03) 0%, rgba(184, 134, 11, 0.01) 100%);
  }

  .trust-badge.featured::before {
    background: linear-gradient(90deg, var(--color-accent), rgba(184, 134, 11, 0.6));
  }

  .badge-icon-wrapper {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem auto;
    background: linear-gradient(135deg, rgba(184, 134, 11, 0.12), rgba(184, 134, 11, 0.08));
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(184, 134, 11, 0.1);
  }

  .badge-icon {
    width: 32px;
    height: 32px;
    color: var(--color-accent);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .trust-badge:hover .badge-icon-wrapper {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, rgba(184, 134, 11, 0.18), rgba(184, 134, 11, 0.12));
    border-color: rgba(184, 134, 11, 0.3);
    box-shadow: 0 8px 16px rgba(184, 134, 11, 0.2);
  }

  .trust-badge:hover .badge-icon {
    transform: scale(1.1);
  }

  .badge-content-wrapper {
    position: relative;
    z-index: 2;
  }

  .badge-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-black);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .badge-subtitle {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-description {
    font-size: 0.75rem;
    color: var(--color-text-light);
    line-height: 1.5;
  }

  .badge-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, rgba(184, 134, 11, 0.1), transparent 70%);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .trust-badge:hover .badge-glow {
    opacity: 1;
  }

  /* Staggered animation on load */
  @media (prefers-reduced-motion: no-preference) {
    .trust-badge {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 0.6s ease-out forwards;
    }

    .trust-badge[data-index="0"] { animation-delay: 0.1s; }
    .trust-badge[data-index="1"] { animation-delay: 0.2s; }
    .trust-badge[data-index="2"] { animation-delay: 0.3s; }
    .trust-badge[data-index="3"] { animation-delay: 0.4s; }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .trust-badge {
      padding: 1.5rem 1rem;
    }

    .badge-icon-wrapper {
      width: 56px;
      height: 56px;
      margin-bottom: 1rem;
    }

    .badge-icon {
      width: 28px;
      height: 28px;
    }

    .badge-title {
      font-size: 1.125rem;
    }
  }
</style>
