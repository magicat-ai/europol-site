---
interface Props {
  services: Array<{ name: string; href: string; description?: string }>;
}

const { services } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-12">
  {services.map((service) => (
    <a 
      href={service.href}
      class="block p-6 rounded-lg border transition-all duration-200 hover:shadow-md"
      style="border-color: rgba(30, 58, 95, 0.1); background-color: white;"
      onmouseover="this.style.borderColor='var(--color-accent)'"
      onmouseout="this.style.borderColor='rgba(30, 58, 95, 0.1)'"
    >
      <h3 class="text-xl font-bold mb-2" style="color: var(--color-navy); font-family: 'Playfair Display', serif;">
        {service.name}
      </h3>
      {service.description && (
        <p class="text-sm" style="color: var(--color-text-light);">
          {service.description}
        </p>
      )}
      <span class="inline-flex items-center gap-2 mt-3 text-sm font-semibold" style="color: var(--color-navy);">
        Scopri di più →
      </span>
    </a>
  ))}
</div>

