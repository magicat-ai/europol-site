---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Pagina Non Trovata | EUROPOL®";
const description = "La pagina che stai cercando non esiste o è stata spostata.";
const canonical = "https://europolinvestigazioni.it/404";
---

<BaseLayout title={title} description={description} canonical={canonical} robots="noindex, nofollow">
  <section class="py-24 md:py-32 min-h-[70vh] flex items-center justify-center bg-gradient-to-b from-white via-gray-50/50 to-white">
    <div class="container mx-auto px-4 max-w-3xl text-center">
      <!-- Error Code -->
      <div class="mb-8">
        <h1 class="text-9xl md:text-[12rem] font-bold" style="font-family: 'Playfair Display', serif; color: var(--color-accent); line-height: 1;">
          404
        </h1>
      </div>

      <!-- Title -->
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6" style="font-family: 'Playfair Display', serif; color: var(--color-black);">
        Pagina Non Trovata
      </h2>

      <!-- Description -->
      <p class="text-xl md:text-2xl mb-12" style="color: var(--color-text-light); line-height: 1.7;">
        La pagina che stai cercando non esiste o è stata spostata.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="/"
          class="inline-block px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 hover:scale-105"
          style="background-color: var(--color-accent); color: white; box-shadow: 0 4px 12px rgba(184, 134, 11, 0.3);"
        >
          Torna alla Home
        </a>

        <a
          href="/contatti/"
          class="inline-block px-8 py-4 rounded-lg font-semibold text-lg border transition-all duration-300 hover:scale-105"
          style="border-color: var(--color-black); color: var(--color-black); background-color: transparent;"
        >
          Contattaci
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="mt-16 pt-8 border-t" style="border-color: rgba(11, 11, 11, 0.1);">
        <p class="text-sm font-medium mb-4" style="color: var(--color-black);">
          Link Utili:
        </p>
        <div class="flex flex-wrap justify-center gap-6 text-sm">
          <a href="/investigazioni-private/" class="hover:underline" style="color: var(--color-accent);">
            Investigazioni Private
          </a>
          <a href="/investigazioni-aziendali/" class="hover:underline" style="color: var(--color-accent);">
            Investigazioni Aziendali
          </a>
          <a href="/intelligence-e-servizi-speciali/" class="hover:underline" style="color: var(--color-accent);">
            Intelligence
          </a>
          <a href="/europol-istituto-di-investigazioni/" class="hover:underline" style="color: var(--color-accent);">
            Chi Siamo
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
