<script>
  // Live Activity Indicator
  const activities = [
    "‚ö° 3 consulenze richieste nelle ultime 2 ore",
    "‚úì Ultima consulenza completata 15 minuti fa",
    "üìû 5 clienti contattati oggi",
    "üéØ 2 nuovi casi risolti questa settimana"
  ];
  
  let activityIndex = 0;
  const activityElement = document.querySelector('.activity-text');
  const liveActivity = document.getElementById('live-activity');
  
  if (activityElement && liveActivity) {
    function updateActivity() {
      activityElement.textContent = activities[activityIndex];
      activityIndex = (activityIndex + 1) % activities.length;
    }
    
    updateActivity();
    setInterval(updateActivity, 8000);
    
    // Show after 2 seconds
    setTimeout(() => {
      liveActivity.style.display = 'block';
    }, 2000);
  }

  // Form Progress Indicator
  const formProgress = document.getElementById('consultation-form');
  const inputsProgress = formProgress?.querySelectorAll('.form-input');
  const progressBar = document.getElementById('progress-bar');
  const progressText = document.getElementById('form-progress');
  
  if (inputsProgress && progressBar && progressText) {
    function updateProgress() {
      let filled = 0;
      inputsProgress.forEach(input => {
        if (input.value.trim() !== '') {
          filled++;
        }
      });
      const progress = (filled / inputsProgress.length) * 100;
      progressBar.style.width = progress + '%';
      progressText.textContent = Math.round(progress) + '%';
    }
    
    inputsProgress.forEach(input => {
      input.addEventListener('input', updateProgress);
      input.addEventListener('blur', updateProgress);
    });
  }

  // Smooth scroll to form
  document.querySelectorAll('a[href="#consulenza"]').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('consulenza')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
  });

  // Form Validation Migliorata
  const form = document.getElementById('consultation-form');
  const inputs = form?.querySelectorAll('.form-input');
  
  if (inputs) {
    inputs.forEach(input => {
      input.addEventListener('blur', function() {
        validateField(input);
      });
      
      input.addEventListener('input', function() {
        const errorMsg = input.parentElement?.querySelector('.error-message');
        if (errorMsg && input.value.trim() !== '') {
          errorMsg.classList.add('hidden');
          input.style.borderColor = 'rgba(11, 11, 11, 0.2)';
          input.classList.remove('error');
          input.classList.remove('success');
        }
      });
    });
  }

  function validateField(field) {
    const errorMsg = field.parentElement?.querySelector('.error-message');
    if (!errorMsg) return;
    
    if (field.hasAttribute('required') && !field.value.trim()) {
      errorMsg.textContent = 'Questo campo √® obbligatorio';
      errorMsg.classList.remove('hidden');
      field.style.borderColor = '#ef4444';
      field.classList.add('error');
      return false;
    }
    
    if (field.type === 'email' && field.value && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(field.value)) {
      errorMsg.textContent = 'Inserisci un indirizzo email valido';
      errorMsg.classList.remove('hidden');
      field.style.borderColor = '#ef4444';
      field.classList.add('error');
      return false;
    }
    
    if (field.type === 'tel' && field.value && !/^[\d\s\+\-\(\)\.]+$/.test(field.value)) {
      errorMsg.textContent = 'Inserisci un numero di telefono valido';
      errorMsg.classList.remove('hidden');
      field.style.borderColor = '#ef4444';
      field.classList.add('error');
      return false;
    }
    
    errorMsg.classList.add('hidden');
    field.style.borderColor = 'rgba(11, 11, 11, 0.2)';
    field.classList.remove('error');
    return true;
  }

  // Auto-seleziona il consenso quando si clicca sul pulsante
  const submitButton = document.getElementById('submit-button');
  submitButton?.addEventListener('click', function(e) {
    const consentCheckbox = document.getElementById('privacy_consent');
    if (consentCheckbox && !consentCheckbox.checked) {
      consentCheckbox.checked = true;
    }
  });

  // Form submission handler
  form?.addEventListener('submit', function(e) {
    let isValid = true;
    inputs?.forEach(input => {
      if (!validateField(input)) {
        isValid = false;
      }
    });
    
    // Check GDPR consent
    const consentCheckbox = document.getElementById('privacy_consent');
    if (consentCheckbox && !consentCheckbox.checked) {
      isValid = false;
      consentCheckbox.focus();
    }
    
    if (!isValid) {
      e.preventDefault();
      // Scroll to first error
      const firstError = form.querySelector('.error-message:not(.hidden)');
      if (firstError) {
        firstError.closest('div')?.scrollIntoView({ behavior: 'smooth', block: 'center' });
      } else if (!consentCheckbox?.checked) {
        consentCheckbox?.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    }
  });
</script>

